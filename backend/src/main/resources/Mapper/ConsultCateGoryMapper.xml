<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="moim.renew.backend.ConsultCategory.Mapper.ConsultCategoryMapper">
    <resultMap id="ConsultResultMap" type="moim.renew.backend.ConsultCategory.Entity.ConsultCategoryEntity">
        <id     property="consultCategoryId"    column="Consult_categoryId"/>
        <result property="consultType" column="ConsultType"/>
    </resultMap>

    <!--  상담 테이블 분류  -->
    <insert id="InsertConsultCategory" parameterType="moim.renew.backend.ConsultCategory.Entity.ConsultCategoryEntity">
        INSERT INTO consult_category(Consult_categoryId, ConsultType) VALUES(#{consultCategoryId},#{consultType})
    </insert>
    <!--상담 테이블 분류 수정 -->
    <update id="UpdateConsultCategory" parameterType="moim.renew.backend.ConsultCategory.Entity.ConsultCategoryEntity">
        UPDATE consult_category SET ConsultType = #{consultType} WHERE Consult_categoryId = #{consultCategoryId}
    </update>
    <!-- 상담 테이블 분류 삭제 -->
    <delete id="DeleteConsultCategory" parameterType="string">
        DELETE FROM consult_category WHERE Consult_categoryId = #{consultCategoryId}
    </delete>
    <!--  상담 테이블 분류 조회  -->
    <select id="SelectConsultCategory" resultMap="ConsultResultMap">
        SELECT * FROM consult_category
    </select>
</mapper>
